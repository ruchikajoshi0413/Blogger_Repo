<h3>Post a Comment</h3>
<p>(Comment form will go here)</p>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :name, "Author's name" %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>